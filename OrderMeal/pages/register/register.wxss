/*科室选择器*/
.department.{
  width: 150rpx;
  height: 65rpx;
  position: relative;
  left: -40rpx;
  background-color: white;
  color: rgb(87, 107, 149);
  justify-content: center;
  align-items: center;
  border: 1px solid black;
  border-radius: 5px;
}

.department .picker {
  display: flex;
  flex-direction: row;
  align-self: center;
  border: 1px solid lightgray;
}

/*选择器内的icon*/
.department image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

